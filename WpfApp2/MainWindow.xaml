<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        ShowInTaskbar="False" 
        Title="MainWindow" Height="100" Width="200"
        WindowStyle="None" ResizeMode="NoResize"   Topmost="True">
  
    
    <Grid Background="Transparent" MouseDown="Grid_MouseDown">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Upload Speed:" FontSize="12"  FontFamily="Arial" Margin="5"/>
            <TextBlock x:Name="uploadSpeedText" FontSize="12"  FontFamily="Arial" Margin="5"/>
            <TextBlock Text="Download Speed:" FontSize="12"  FontFamily="Arial" Margin="5"/>
            <TextBlock x:Name="downloadSpeedText" FontSize="12"  FontFamily="Arial" Margin="5"/>
            
        </StackPanel>
    </Grid>
    
</Window>
