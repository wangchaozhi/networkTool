<Application x:Class="WpfApp2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp2"
             xmlns:tb="http://www.hardcodet.net/taskbar"
            >
    <Application.Resources>
        <ResourceDictionary>
            <tb:TaskbarIcon x:Key="MyNotifyIcon"
                            IconSource="pack://application:,,,/res/icon.ico"
                            ToolTipText="我的应用"
                            Visibility="Visible">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu  Opened="ContextMenu_Opened">
                        <MenuItem Header="启动时运行" IsCheckable="True" Checked="AutoStart_Checked" Unchecked="AutoStart_Unchecked"/>
                        <MenuItem Header="{Binding WindowVisibilityText}" Command="{Binding ToggleWindowCommand}" FontSize="10"/>
                        <MenuItem Header="退出" Command="{Binding ExitCommand}" FontSize="10"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>

</Application>
