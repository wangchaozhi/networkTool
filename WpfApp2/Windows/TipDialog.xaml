<Window x:Class="WpfApp2.Windows.TipDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp2.Windows"
        mc:Ignorable="d"
        Title="提示" Height="150" Width="300"  WindowStartupLocation="CenterScreen">  <!-- 确保窗口在屏幕中心打开 -->
    <Grid>
        <TextBlock Text="{Binding Message}" Margin="0,-40,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
            <Button Content="确定" Name="YesButton" Click="YesButton_Click" Width="80" Height="25" Margin="5"/>  <!-- 调整按钮大小 -->
        </StackPanel>
    </Grid>
</Window>
